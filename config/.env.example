# Application Configuration
NODE_ENV=production
PORT=8080
APP_NAME=FinNaslain Financial Solution
APP_VERSION=1.0.0

# Database Configuration
DB_HOST=your-database-host
DB_PORT=5432
DB_NAME=finnaslaim_production
DB_USER=finnaslaim_app_user
DB_PASSWORD=your-secure-database-password
DB_SSL=true
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your-secure-redis-password
REDIS_DB=0

# Security Configuration
JWT_SECRET=your-very-secure-jwt-secret-key-here
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your-secure-refresh-token-secret
REFRESH_TOKEN_EXPIRES_IN=30d
ENCRYPTION_KEY=your-32-character-encryption-key

# API Configuration
API_RATE_LIMIT=100
API_RATE_WINDOW=15m
CORS_ORIGIN=https://your-domain.com
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Email Configuration (Optional)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=your-sendgrid-api-key
EMAIL_FROM=noreply@finnaslaim.com

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=/app/logs/app.log

# Monitoring Configuration
SENTRY_DSN=your-sentry-dsn-here
SENTRY_ENVIRONMENT=production
ENABLE_METRICS=true

# Payment Gateway (if applicable)
PAYMENT_GATEWAY_API_KEY=your-payment-gateway-key
PAYMENT_GATEWAY_SECRET=your-payment-gateway-secret
PAYMENT_GATEWAY_WEBHOOK_SECRET=your-webhook-secret

# Storage Configuration (DigitalOcean Spaces)
DO_SPACES_ENDPOINT=https://nyc3.digitaloceanspaces.com
DO_SPACES_BUCKET=finnaslaim-storage
DO_SPACES_ACCESS_KEY=your-spaces-access-key
DO_SPACES_SECRET_KEY=your-spaces-secret-key

# Feature Flags
ENABLE_2FA=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_AUDIT_LOGGING=true
MAINTENANCE_MODE=false

# Session Configuration
SESSION_SECRET=your-secure-session-secret
SESSION_MAX_AGE=86400000

# Compliance
DATA_RETENTION_DAYS=2555
ENABLE_GDPR_COMPLIANCE=true
