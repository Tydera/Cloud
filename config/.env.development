# Development Environment Configuration

NODE_ENV=development
PORT=8080
APP_NAME=FinNaslain Financial Solution (Dev)

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=finnaslaim_dev
DB_USER=finnaslaim
DB_PASSWORD=development_password
DB_SSL=false

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Security Configuration
JWT_SECRET=dev-jwt-secret-not-for-production
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_SECRET=dev-refresh-token-secret
REFRESH_TOKEN_EXPIRES_IN=7d

# API Configuration
API_RATE_LIMIT=1000
API_RATE_WINDOW=15m
CORS_ORIGIN=*

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=pretty
LOG_FILE=/app/logs/dev.log

# Development Tools
ENABLE_SWAGGER=true
ENABLE_DEBUG=true
ENABLE_HOT_RELOAD=true
